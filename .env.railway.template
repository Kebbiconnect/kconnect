# ===========================================
# RAILWAY + NEON DATABASE ENVIRONMENT CONFIG
# ===========================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to git (already in .gitignore)

# ===========================================
# DJANGO SETTINGS
# ===========================================

# IMPORTANT: Generate a new secret key for production!
# Use: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SESSION_SECRET=your-super-secret-key-here-change-this

# Set to False in production, True for local development
DEBUG=False

# Railway automatically provides RAILWAY_PUBLIC_DOMAIN
# Add your custom domain if you have one
ALLOWED_HOSTS=*.railway.app,yourdomain.com

# ===========================================
# NEON DATABASE CONFIGURATION
# ===========================================
# Get these from your Neon console: https://console.neon.tech

# Full connection string (Railway style)
DATABASE_URL=postgresql://username:password@host.neon.tech/database?sslmode=require

# Individual connection parameters (alternative method)
PGHOST=your-host.neon.tech
PGDATABASE=neondb
PGUSER=neondb_owner
PGPASSWORD=your-neon-password
PGPORT=5432

# ===========================================
# SECURITY SETTINGS
# ===========================================

# Enable HTTPS redirect in production
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# Add your production domain here
# CSRF_TRUSTED_ORIGINS=https://yourdomain.com,https://*.railway.app

# ===========================================
# EMAIL CONFIGURATION (Optional)
# ===========================================
# For password reset functionality

# Development (prints to console)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# Production (Gmail example - use App Password, not regular password)
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password
# DEFAULT_FROM_EMAIL=noreply@kpn.org

# ===========================================
# OPTIONAL: TURSO/LIBSQL (Alternative Database)
# ===========================================
# Only if you want to use Turso instead of Neon
# USE_TURSO=False
# TURSO_AUTH_TOKEN=your-turso-token

# ===========================================
# RAILWAY-SPECIFIC NOTES
# ===========================================
# 1. Railway auto-provides: PORT, RAILWAY_ENVIRONMENT, RAILWAY_PUBLIC_DOMAIN
# 2. Add all variables above to Railway's environment variables
# 3. Neon provides DATABASE_URL automatically if you link it as a service
# 4. After deployment, run: python manage.py migrate
# 5. Then run: python manage.py seed_data
